{
  "$merge": {
    "source": {
      "$import": "../oxc/RuleBaseFacility.json"
    },
    "with": {
      "$id": "https://openxcom.org/schemas/oxce/RuleBaseFacility.json",
      "oneOf": [
        { "$append": { "required": [ "new" ] } },
        { "$append": { "required": [ "override" ] } },
        { "$append": { "required": [ "update" ] } },
        { "$append": { "required": [ "ignore" ] } }
      ],
      "properties": {
        "new": { "type": "string" },
        "override": { "type": "string" },
        "update": { "type": "string" },
        "ignore": { "type": "string" },
        "refNode": {
          "$ref": "RuleBaseFacility.json"
        },
        "sizeX": {
          "type": "integer"
        },
        "sizeY": {
          "type": "integer"
        },
        "spriteEnabled": {
          "type": "boolean"
        },
        "placeSound": {
          "$ref": "ModOffset.json"
        },
        "connectorsDisabled": {
          "type": "boolean"
        },
        "fakeUnderwater": {
          "type": "integer"
        },
        "requiresBaseFunc": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "provideBaseFunc": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "forbiddenBaseFunc": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "missileAttraction": {
          "type": "integer"
        },
        "refundValue": {
          "type": "integer"
        },
        "mindPower": {
          "type": "integer"
        },
        "sightRange": {
          "type": "integer"
        },
        "sightChance": {
          "type": "integer"
        },
        "trainingRooms": {
          "type": "integer"
        },
        "ammoMax": {
          "type": "integer"
        },
        "rearmRate": {
          "type": "integer"
        },
        "ammoNeeded": {
          "type": "integer"
        },
        "unifiedDamageFormula": {
          "type": "boolean"
        },
        "shieldDamageModifier": {
          "type": "integer"
        },
        "ammoItem": {
          "type": "string"
        },
        "maxAllowedPerBase": {
          "type": "integer"
        },
        "manaRecoveryPerDay": {
          "type": "integer"
        },
        "healthRecoveryPerDay": {
          "type": "integer"
        },
        "sickBayAbsoluteBonus": {
          "type": "number"
        },
        "sickBayRelativeBonus": {
          "type": "number"
        },
        "prisonType": {
          "type": "integer"
        },
        "rightClickActionType": {
          "type": "integer"
        },
        "buildCostItems": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "build": {
                "type": "integer"
              },
              "refund": {
                "type": "integer"
              }
            },
            "additionalProperties": false
          }
        },
        "verticalLevels": {
          "items": {
            "$ref": "MapScript.json#/definitions/VerticalLevels"
          },
          "type": "array"
        },
        "leavesBehindOnSell": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "removalTime": {
          "type": "integer"
        },
        "canBeBuiltOver": {
          "type": "boolean"
        },
        "upgradeOnly": {
          "type": "boolean"
        },
        "buildOverFacilities": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "storageTiles": {
          "items": {
            "$ref": "../oxc/Position.json"
          },
          "type": "array"
        },
        "destroyedFacility": {
          "type": "string"
        }
      }
    }
  }
}