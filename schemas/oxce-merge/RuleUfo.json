{
  "$merge": {
    "source": {
      "$merge": {
        "source": {
          "$import": "../oxc/RuleUfo.json"
        },
        "with": {
          "$import": "RuleUfoStats.json"
        }
      }
    },
    "with": {
      "$id": "https://openxcom.org/schemas/oxce/RuleUfo.json",
      "oneOf": [
        { "$append": { "required": [ "new" ] } },
        { "$append": { "required": [ "override" ] } },
        { "$append": { "required": [ "update" ] } },
        { "$append": { "required": [ "ignore" ] } }
      ],
      "properties": {
        "new": { "type": "string" },
        "override": { "type": "string" },
        "update": { "type": "string" },
        "ignore": { "type": "string" },
        "refNode": {
          "$ref": "RuleUfo.json"
        },
        "hunterKillerPercentage": {
          "type": "integer"
        },
        "huntMode": {
          "type": "integer"
        },
        "huntSpeed": {
          "type": "integer"
        },
        "huntBehavior": {
          "type": "integer"
        },
        "softlockThreshold": {
          "type": "integer"
        },
        "hitImage": {
          "type": "string"
        },
        "missilePower": {
          "type": "integer"
        },
        "unmanned": {
          "type": "boolean"
        },
        "splashdownSurvivalChance": {
          "type": "integer"
        },
        "fakeWaterLandingChance": {
          "type": "integer"
        },
        "raceBonus": {
          "additionalProperties": {
            "$ref": "RuleUfoStats.json"
          },
          "type": "object"
        },
        "fireSound": {
          "$ref": "ModOffset.json"
        },
        "alertSound": {
          "$ref": "ModOffset.json"
        },
        "huntAlertSound": {
          "$ref": "ModOffset.json"
        },
        "hitSound": {
          "$ref": "ModOffset.json"
        },
        "tags": {
          "type": "object"
        },
        "scripts": {
          "type": "object"
        }
      }
    }
  }
}