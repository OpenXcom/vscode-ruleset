{
  "$merge": {
    "source": {
      "$merge": {
        "source": {
          "$import": "../oxc/RuleCraft.json"
        },
        "with": {
          "$import": "RuleCraftStats.json"
        }
      }
    },
    "with": {
      "$id": "https://openxcom.org/schemas/oxce/RuleCraft.json",
      "properties": {
        "requiresBuyBaseFunc": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "pilots": {
          "type": "integer"
        },
        "craftInventoryTile": {
          "$ref": "Position.json"
        },
        "keepCraftAfterFailedMission": {
          "type": "boolean"
        },
        "allowLanding": {
          "type": "boolean"
        },
        "notifyWhenRefueled": {
          "type": "boolean"
        },
        "autoPatrol": {
          "type": "boolean"
        },
        "weaponTypes": {
          "type": "array",
          "items": {
            "type": [
              "array",
              "integer"
            ],
            "items": {
              "type": "integer"
            }
          }
        },
        "weaponStrings": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "maxStorageSpace": {
          "type": "number"
        },
        "shieldRechargedAtBase": {
          "type": "integer"
        },
        "forceShowInMonthlyCosts": {
          "type": "boolean"
        },
        "mapVisible": {
          "type": "boolean"
        }
      }
    }
  }
}