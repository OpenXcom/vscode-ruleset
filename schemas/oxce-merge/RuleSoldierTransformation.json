    "createsClone": {
      "type": "boolean"
    },
    "needsCorpseRecovered": {
      "type": "boolean"
    },
    "allowsDeadSoldiers": {
      "type": "boolean"
    },
    "allowsLiveSoldiers": {
      "type": "boolean"
