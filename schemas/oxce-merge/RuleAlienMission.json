          "minimum": 0,
          "maximum": 6
        },
        "endlessInfiltration": {
          "type": "boolean"
        },
        "skipScoutingPhase": {
          "type": "boolean"
        },
        "multiUfoRetaliation": {
          "type": "boolean"
        },
        "multiUfoRetaliationExtra": {
          "type": "boolean"
        },
        "ignoreBaseDefenses": {
          "type": "boolean"
        },
        "despawnEvenIfTargeted": {
          "type": "boolean"
