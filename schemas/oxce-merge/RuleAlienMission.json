            "huntMode": {
              "type": "integer"
            },
            "huntBehavior": {
              "type": "integer"
            },
            "escort": {
              "type": "boolean"
            },
            "interruptPercentage": {
              "type": "integer"
            }
          }
        }
      }
    }
