{
  "$id": "https://openxcom.org/schemas/oxc/RuleArcScript.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "oneOf": [
    { "required": [ "type" ] },
    { "required": [ "new" ] },
    { "required": [ "override" ] },
    { "required": [ "update" ] },
    { "required": [ "ignore" ] }
  ],
  "properties": {
    "new": { "type": "string" },
    "override": { "type": "string" },
    "update": { "type": "string" },
    "ignore": { "type": "string" },
    "refNode": {
      "$ref": "RuleArcScript.json"
    },
    "type": {
      "type": "string"
    },
    "sequentialArcs": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "randomArcs": {
      "$ref": "WeightedOptions.json"
    },
    "firstMonth": {
      "type": "integer"
    },
    "lastMonth": {
      "type": "integer"
    },
    "executionOdds": {
      "type": "integer"
    },
    "maxArcs": {
      "type": "integer"
    },
    "minDifficulty": {
      "type": "integer"
    },
    "maxDifficulty": {
      "type": "integer"
    },
    "minScore": {
      "type": "integer"
    },
    "maxScore": {
      "type": "integer"
    },
    "minFunds": {
      "type": "integer"
    },
    "maxFunds": {
      "type": "integer"
    },
    "missionVarName": {
      "type": "string"
    },
    "missionMarkerName": {
      "type": "string"
    },
    "counterMin": {
      "type": "integer"
    },
    "counterMax": {
      "type": "integer"
    },
    "itemTriggers": {
      "additionalProperties": {
        "type": "boolean"
      },
      "type": "object"
    },
    "facilityTriggers": {
      "additionalProperties": {
        "type": "boolean"
      },
      "type": "object"
    },
    "xcomBaseInRegionTriggers": {
      "additionalProperties": {
        "type": "boolean"
      },
      "type": "object"
    },
    "xcomBaseInCountryTriggers": {
      "additionalProperties": {
        "type": "boolean"
      },
      "type": "object"
    },
    "researchTriggers": {
      "additionalProperties": {
        "type": "boolean"
      },
      "type": "object"
    }
  }
}