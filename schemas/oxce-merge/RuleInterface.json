{
  "$merge": {
    "source": {
      "$import": "../oxc/RuleInterface.json"
    },
    "with": {
      "$id": "https://openxcom.org/schemas/oxce/RuleInterface.json",
      "oneOf": [
        { "$append": { "required": [ "new" ] } },
        { "$append": { "required": [ "override" ] } },
        { "$append": { "required": [ "update" ] } },
        { "$append": { "required": [ "ignore" ] } }
      ],
      "properties": {
        "new": { "type": "string" },
        "override": { "type": "string" },
        "update": { "type": "string" },
        "ignore": { "type": "string" },
        "refNode": {
          "$ref": "RuleInterface.json"
        },
        "backgroundImage": {
          "type": "string"
        },
        "altBackgroundImage": {
          "type": "string"
        },
        "upgBackgroundImage": {
          "items": {
            "items": {
              "type": "string"
            },
            "minItems": 2,
            "maxItems": 2,
            "type": "array"
          },
          "type": "array"
        },
        "sound": {
          "$ref": "ModOffset.json"
        }
      },
      "definitions": {
        "Element": {
          "properties": {
            "custom": {
              "type": "integer"
            }
          }
        }
      }
    }
  }
}