{
  "$merge": {
    "source": {
      "$import": "../oxc/RuleCraftWeapon.json"
    },
    "with": {
      "$id": "https://openxcom.org/schemas/oxce/RuleCraftWeapon.json",
      "oneOf": [
        { "$append": { "required": [ "new" ] } },
        { "$append": { "required": [ "override" ] } },
        { "$append": { "required": [ "update" ] } },
        { "$append": { "required": [ "ignore" ] } }
      ],
      "properties": {
        "new": { "type": "string" },
        "override": { "type": "string" },
        "update": { "type": "string" },
        "ignore": { "type": "string" },
        "refNode": {
          "$ref": "RuleCraftWeapon.json"
        },
        "stats": {
          "$ref": "RuleCraftStats.json"
        },
        "shieldDamageModifier": {
          "type": "integer"
        },
        "weaponType": {
          "type": "integer"
        },
        "hidePediaInfo": {
          "type": "boolean"
        },
        "bulletSaving": {
          "type": "boolean"
        },
        "tractorBeamPower": {
          "type": "integer"
        }
      }
    }
  }
}