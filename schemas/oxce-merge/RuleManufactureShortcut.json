{
  "$id": "https://openxcom.org/schemas/oxce/RuleManufactureShortcut.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "oneOf": [
    { "required": [ "name" ] },
    { "required": [ "new" ] },
    { "required": [ "override" ] },
    { "required": [ "update" ] },
    { "required": [ "ignore" ] }
  ],
  "properties": {
    "new": { "type": "string" },
    "override": { "type": "string" },
    "update": { "type": "string" },
    "ignore": { "type": "string" },
    "name": {
      "type": "string"
    },
    "startFrom": {
      "type": "string"
    },
    "breakDownItems": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "breakDownRequires": {
      "type": "boolean"
    },
    "breakDownRequiresBaseFunc": {
      "type": "boolean"
    }
  }
}
