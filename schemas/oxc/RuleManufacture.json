{
  "$id": "https://openxcom.org/schemas/oxc/RuleManufacture.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "oneOf": [
    { "required": [ "name" ] }
  ],
  "properties": {
    "name": {
      "type": "string"
    },
    "category": {
      "type": "string"
    },
    "requires": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "space": {
      "type": "integer"
    },
    "time": {
      "type": "integer"
    },
    "cost": {
      "type": "integer"
    },
    "requiredItems": {
      "additionalProperties": {
        "type": "integer"
      },
      "type": "object"
    },
    "producedItems": {
      "additionalProperties": {
        "type": "integer"
      },
      "type": "object"
    },
    "listOrder": {
      "type": "integer"
    }
  }
}