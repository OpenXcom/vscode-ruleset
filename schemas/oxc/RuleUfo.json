{
  "$id": "https://openxcom.org/schemas/oxc/RuleUfo.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "oneOf": [
    { "required": [ "type" ] }
  ],
  "properties": {
    "type": {
      "type": "string"
    },
    "size": {
      "type": "string",
      "enum": [
        "STR_VERY_SMALL",
        "STR_SMALL",
        "STR_MEDIUM_UC",
        "STR_LARGE",
        "STR_VERY_LARGE"
      ]
    },
    "sprite": {
      "type": "integer"
    },
    "marker": {
      "type": "integer"
    },
    "markerLand": {
      "type": "integer"
    },
    "markerCrash": {
      "type": "integer"
    },
    "damageMax": {
      "type": "integer"
    },
    "speedMax": {
      "type": "integer"
    },
    "power": {
      "type": "integer"
    },
    "range": {
      "type": "integer"
    },
    "score": {
      "type": "integer"
    },
    "reload": {
      "type": "integer"
    },
    "breakOffTime": {
      "type": "integer"
    },
    "sightRange": {
      "type": "integer"
    },
    "missionScore": {
      "type": "integer"
    },
    "battlescapeTerrainData": {
      "$ref": "RuleTerrain.json"
    },
    "modSprite": {
      "type": "string"
    }
  }
}