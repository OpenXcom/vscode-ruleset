{
  "$id": "https://openxcom.org/schemas/oxc/RuleResearch.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "oneOf": [
    { "required": [ "name" ] }
  ],
  "properties": {
    "name": {
      "type": "string"
    },
    "lookup": {
      "type": "string"
    },
    "cutscene": {
      "type": "string"
    },
    "cost": {
      "type": "integer"
    },
    "points": {
      "type": "integer"
    },
    "dependencies": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "unlocks": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "getOneFree": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "requires": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "needItem": {
      "type": "boolean"
    },
    "destroyItem": {
      "type": "boolean"
    },
    "listOrder": {
      "type": "integer"
    },
    "unlockFinalMission": {
      "type": "boolean"
    }
  }
}