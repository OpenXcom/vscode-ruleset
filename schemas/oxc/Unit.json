{
  "$id": "https://openxcom.org/schemas/oxc/Unit.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "type"
  ],
  "properties": {
    "type": {
      "type": "string"
    },
    "race": {
      "type": "string"
    },
    "rank": {
      "type": "string"
    },
    "stats": {
      "$ref": "UnitStats.json"
    },
    "armor": {
      "type": "string"
    },
    "standHeight": {
      "type": "integer"
    },
    "kneelHeight": {
      "type": "integer"
    },
    "floatHeight": {
      "type": "integer"
    },
    "value": {
      "type": "integer"
    },
    "intelligence": {
      "type": "integer"
    },
    "aggression": {
      "type": "integer"
    },
    "energyRecovery": {
      "type": "integer"
    },
    "specab": {
      "type": "integer",
      "minimum": 0,
      "maximum": 3
    },
    "spawnUnit": {
      "type": "string"
    },
    "livingWeapon": {
      "type": "boolean"
    },
    "meleeWeapon": {
      "type": "string"
    },
    "psiWeapon": {
      "type": "string"
    },
    "capturable": {
      "type": "boolean"
    },
    "builtInWeapons": {
      "deprecationMessage": "Deprecated: use \"builtInWeaponSets\" instead"
    },
    "builtInWeaponSets": {
      "items": {
        "items": {
          "type": "string"
        },
        "type": "array"
      },
      "type": "array"
    },
    "deathSound": {
      "$ref": "ModOffset.json#/definitions/List"
    },
    "aggroSound": {
      "$ref": "ModOffset.json"
    },
    "moveSound": {
      "$ref": "ModOffset.json"
    }
  }
}