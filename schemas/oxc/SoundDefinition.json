{
  "$id": "https://openxcom.org/schemas/oxc/SoundDefinition.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "oneOf": [
    { "required": [ "type" ] }
  ],
  "properties": {
    "type": {
      "type": "string"
    },
    "soundRanges": {
      "items": {
        "items": {
          "type": "integer"
        },
        "minItems": 2,
        "maxItems": 2,
        "type": "array"
      },
      "type": "array"
    },
    "sounds": {
      "items": {
        "type": "integer"
      },
      "type": "array"
    },
    "file": {
      "type": "string"
    }
  }
}