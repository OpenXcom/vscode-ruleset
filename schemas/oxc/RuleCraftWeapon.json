{
  "$id": "https://openxcom.org/schemas/oxc/RuleCraftWeapon.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "oneOf": [
    { "required": [ "type" ] }
  ],
  "properties": {
    "type": {
      "type": "string"
    },
    "sprite": {
      "type": "integer"
    },
    "sound": {
      "$ref": "ModOffset.json"
    },
    "damage": {
      "type": "integer"
    },
    "range": {
      "type": "integer"
    },
    "accuracy": {
      "type": "integer"
    },
    "reloadCautious": {
      "type": "integer"
    },
    "reloadStandard": {
      "type": "integer"
    },
    "reloadAggressive": {
      "type": "integer"
    },
    "ammoMax": {
      "type": "integer"
    },
    "rearmRate": {
      "type": "integer"
    },
    "projectileType": {
      "type": "integer",
      "minimum": 0,
      "maximum": 5
    },
    "projectileSpeed": {
      "type": "integer"
    },
    "launcher": {
      "type": "string"
    },
    "clip": {
      "type": "string"
    },
    "underwaterOnly": {
      "type": "boolean"
    }
  }
}