{
  "$id": "https://openxcom.org/schemas/oxc/RuleCraft.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "oneOf": [
    { "required": [ "type" ] }
  ],
  "properties": {
    "type": {
      "type": "string"
    },
    "requires": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "sprite": {
      "type": "integer"
    },
    "marker": {
      "type": "integer"
    },
    "fuelMax": {
      "type": "integer"
    },
    "damageMax": {
      "type": "integer"
    },
    "speedMax": {
      "type": "integer"
    },
    "accel": {
      "type": "integer"
    },
    "weapons": {
      "type": "integer"
    },
    "soldiers": {
      "type": "integer"
    },
    "vehicles": {
      "type": "integer"
    },
    "costBuy": {
      "type": "integer"
    },
    "costRent": {
      "type": "integer"
    },
    "costSell": {
      "type": "integer"
    },
    "refuelItem": {
      "type": "string"
    },
    "repairRate": {
      "type": "integer"
    },
    "refuelRate": {
      "type": "integer"
    },
    "radarRange": {
      "type": "integer"
    },
    "radarChance": {
      "type": "integer"
    },
    "sightRange": {
      "type": "integer"
    },
    "transferTime": {
      "type": "integer"
    },
    "score": {
      "type": "integer"
    },
    "battlescapeTerrainData": {
      "$ref": "RuleTerrain.json"
    },
    "deployment": {
      "items": {
        "items": {
          "type": "integer"
        },
        "minItems": 4,
        "maxItems": 4,
        "type": "array"
      },
      "type": "array"
    },
    "spacecraft": {
      "type": "boolean"
    },
    "listOrder": {
      "type": "integer"
    },
    "maxAltitude": {
      "type": "integer"
    },
    "maxItems": {
      "type": "integer"
    }
  }
}