{
    "name": "ruleset-tools",
    "displayName": "OpenXcom Ruleset Tools",
    "description": "Validates YAML ruleset files for OpenXcom mods",
    "version": "0.9.35",
    "publisher": "openxcom",
    "bugs": "https://github.com/OpenXcom/vscode-ruleset/issues",
    "repository": {
        "type": "git",
        "url": "https://github.com/OpenXcom/vscode-ruleset"
    },
    "icon": "images/icon.png",
    "engines": {
        "vscode": "^1.77.0"
    },
    "license": "MIT",
    "categories": [
        "Programming Languages",
        "Linters",
        "Snippets",
        "Formatters"
    ],
    "activationEvents": [
        "onLanguage:yaml"
    ],
    "keywords": [
        "openxcom",
        "ruleset",
        "yaml",
        "autocompletion",
        "validation"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "OpenXcom Ruleset",
            "properties": {
                "openxcom.ruleset.validator": {
                    "type": "string",
                    "enum": [
                        "oxc",
                        "oxce"
                    ],
                    "enumDescriptions": [
                        "OpenXcom",
                        "OpenXcom Extended"
                    ],
                    "default": "oxc",
                    "description": "Controls the version used for validating rulesets."
                }
            }
        },
        "languages": [
            {
                "id": "yaml",
                "extensions": [
                    ".rul",
                    ".nam"
                ],
                "filenamePatterns": [
                    "*Font.dat"
                ]
            }
        ],
        "yamlValidation": [
            {
                "fileMatch": "*.nam",
                "url": "./schemas/SoldierNamePool.json"
            },
            {
                "fileMatch": "*Font.dat",
                "url": "./schemas/Font.json"
            },
            {
                "fileMatch": "metadata.yml",
                "url": "./schemas/metadata.json"
            }
        ]
    },
    "extensionDependencies": [
        "redhat.vscode-yaml"
    ],
    "scripts": {
        "vscode:prepublish": "npm run compile && node ./build/index.js",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "16.x",
        "@types/vscode": "^1.77.0",
        "@typescript-eslint/eslint-plugin": "^5.59.1",
        "@typescript-eslint/parser": "^5.59.1",
        "@vscode/test-electron": "^2.3.0",
        "eslint": "^8.39.0",
        "glob": "^8.1.0",
        "json-merger": "^1.1.10",
        "mocha": "^10.2.0",
        "typescript": "^5.0.4"
    }
}
